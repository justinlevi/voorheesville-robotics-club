---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import BlogCard from '@/components/BlogCard.astro';
import ProjectCard from '@/components/ProjectCard.astro';
import { sortBlogPosts, sortProjects, filterDrafts, getFeaturedProjects } from '@/utils/sortContent';


// Get content
const allPosts = await getCollection('blog');
const allProjects = await getCollection('projects');

// Filter and sort
const posts = sortBlogPosts(filterDrafts(allPosts)).slice(0, 3);
const featuredProjects = getFeaturedProjects(sortProjects(allProjects)).slice(0, 2);
---

<BaseLayout 
  title="Home"
  description="Welcome to Voorheesville Robotics Club - Building the future, One robot at a time. Explore our projects, tutorials, and competition updates."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-yellow-400 to-purple-500 text-white py-20 md:py-32">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Building the future,<br />One Robot at a Time
      </h1>
      <p class="text-xl md:text-2xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Join our middle/high school robotics club to learn programming, engineering, and teamwork through hands-on projects and competitions.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/contact"
          class="inline-block px-8 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-blue-50 transition-colors"
        >
          Get Started
        </a>
        <a
          href="/projects"
          class="inline-block px-8 py-3 bg-blue-700 text-white font-semibold rounded-lg hover:bg-blue-800 transition-colors border-2 border-white/20"
        >
          View Projects
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  {featuredProjects.length > 0 && (
    <section class="py-16 bg-gray-200">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Featured Projects</h2>
          <a href="/projects" class="text-blue-600 hover:text-blue-700 font-medium">
            View all →
          </a>
        </div>
        <div class="grid gap-6 md:grid-cols-2">
          {featuredProjects.map((project) => (
            <ProjectCard project={project} />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Recent Blog Posts -->
  {posts.length > 0 && (
    <section class="bg-gray-200 py-16">
      <div class="container mx-auto px-4">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Latest from the Blog</h2>
          <a href="/blog" class="text-blue-600 hover:text-blue-700 font-medium">
            View all →
          </a>
        </div>
        <div class="grid gap-6 md:grid-cols-3">
          {posts.map((post) => (
            <BlogCard post={post} />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Features / Stats -->
  <section class="py-16 bg-gray-200">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 text-center mb-12">
        Why Join Our Club?
      </h2>
      <div class="grid gap-8 md:grid-cols-3">
        <!-- Feature 1 -->
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 text-blue-600 rounded-full mb-4">
            <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Learn by Doing</h3>
          <p class="text-gray-800">
            Build real robots, write real code, and solve real engineering challenges with hands-on projects.
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 text-blue-600 rounded-full mb-4">
            <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Compete Together</h3>
          <p class="text-gray-800">
            Represent our school in regional and national robotics competitions against top teams.
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 text-blue-600 rounded-full mb-4">
            <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Build Skills</h3>
          <p class="text-gray-800">
            Develop technical skills in programming, CAD design, electronics, and problem-solving.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-gray-200 py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Ready to Get Started?
      </h2>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        No experience needed! We meet every Monday (Grades 9-12) and Thursday (Grades 6-12) from 2:30-3:30 PM in Room 154.
      </p>
      <a
        href="/contact"
        class="inline-block px-8 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
      >
        Join the Club
      </a>
    </div>
  </section>
</BaseLayout>
